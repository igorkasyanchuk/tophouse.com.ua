- title I18n.t('edit_user_profile_title', :name => @user.user_name)

%h2.heading= I18n.t('edit_user_profile_title', :name => @user.user_name)

- semantic_form_for([:general, @user], :html => { :class => 'signForm wideForm', :id => 'sing_up_form', :multipart => true }) do |form|
  - form.inputs :name => 'Персональна інформація' do
    = form.input :first_name, :input_html => { :class => 'input-s' }
    = form.input :last_name, :input_html => { :class => 'input-s' }
    = form.input :second_name, :input_html => { :class => 'input-s' }
    = form.input :gendre, :as => :radio, :collection => GENDERS.collect{|g| [I18n.t(g), g]}
    = form.input :dob, :selected => nil, :as => :date
    = form.input :position, :input_html => { :class => 'input-s' }
    = form.input :photo
  - form.inputs :name => 'Компанія' do
    = form.input :company_name, :input_html => { :class => 'input-s' }
    = form.input :city, :label_method => "name_#{I18n.locale}"
    = form.input :address, :input_html => { :class => 'input-s' }
    = form.input :web_site, :input_html => { :class => 'input-s' }
    = form.input :email, :input_html => { :class => 'input-s' }
    = form.input :phone_home, :input_html => { :class => 'input-s' }
    = form.input :phone_mobile_1, :input_html => { :class => 'input-s' }
    = form.input :phone_mobile_2, :input_html => { :class => 'input-s' }
    = form.input :fax, :input_html => { :class => 'input-s' }
    = form.input :logo
    = form.input :short_description, :input_html => { :class => 'textarea-w', :rows => 4 }, :as => :text
    = form.input :description, :input_html => { :class => 'textarea-xxl', :rows => 10  }
  - form.buttons do
    = form.submit t('update_action')
    = link_to t('cancel_action'), general_dashboard_path