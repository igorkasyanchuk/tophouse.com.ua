.center_block
  %h2 Sign in
  - semantic_form_for :session, :url => session_path do |form|
    - form.inputs do
      = form.input :email, :input_html => { :class => 'input-s' }
      = form.input :password, :as => :password, :input_html => { :class => 'input-s' }
    - form.buttons do
      = form.commit_button "Sign in"
  %ul
    %li
      = link_to "Sign up", sign_up_path
    %li
      = link_to "Forgot password?", new_password_path