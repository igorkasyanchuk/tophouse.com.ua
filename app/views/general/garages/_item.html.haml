- content_tag_for(:tr, garage, :class => cycle(:odd, :even)) do
  %td= h garage.title
  %td= h garage.address
  %td= h garage.format_square_format(:square)
  %td= garage.full_price(:price_cached)
  %td.actions
    = link_to t('show_action'), resource_path(garage)
    |
    = link_to t('edit_action'), edit_resource_path(garage)
    |
    = link_to t('delete_action'), resource_path(garage), :confirm => t('are_you_sure'), :method => :delete