.center_block
  %h2= t('change_your_password')
  %p= t('change_your_password_text')
  - semantic_form_for(:user, :url  => user_password_path(@user, :token => @user.confirmation_token), :html => { :method => :put }) do |form|
    = form.error_messages
    - form.inputs do
      = form.input :password, :as => :password, :input_html => { :class => 'input-s' }, :label => t('activerecord.attributes.user.password')
      = form.input :password_confirmation, :as => :password, :input_html => { :class => 'input-s' }, :label => t('activerecord.attributes.user.password_confirmation')
    - form.buttons do
      = form.commit_button t('change_your_password_button')