- content_tag_for(:tr, garage, :class => cycle(:odd, :even)) do
  %td.title= h garage.try(:title)
  %td.i_am_type= h garage.try(:i_am_type)
  %td.address= h garage.try(:address)
  %td.square= h garage.try(:square)
  %td.adv_text= h garage.try(:adv_text)
  %td.price= h garage.try(:price)
  %td.currency_id= h garage.try(:currency_id)
  %td.price_cached= h garage.try(:price_cached)
  %td.contact_phone= h garage.try(:contact_phone)
  %td.contact_email= h garage.try(:contact_email)
  %td.user_id= h garage.try(:user_id)
  %td.actions
    = link_to 'Show', garage_path(garage)