.center_block
  %h2= t('reset_you_password')
  %p= t('reset_you_password_text')
  - semantic_form_for :password, :url => passwords_path do |form|
    - form.inputs do
      = form.input :email, :input_html => { :class => 'input-s' }, :label => t('activerecord.attributes.session.email')
    - form.buttons do
      = form.commit_button t('reset_you_password_button')